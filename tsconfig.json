{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  }
}
